<!DOCTYPE html>
<html>
    <head>
        <title>Login</title>
        {{> headers-common }}
    </head>
    <body>
        {{> header }}
        <div class="container" id="registercontainer">
            <h1>Log in</h1>
            {{#pwincorrect}}
                <p>Username or password incorrect</p>
            {{/pwincorrect}}
            <form class="userForm" id="registerform" action="login.php" method="post">
                <input type="text" name="username" value="{{ username }}" placeholder="Username" required maxlength="18" /><br />
                <input type="password" name="password" value="" placeholder="Password" required maxlength="18" /><br />
                <button type="submit" name="button">Log in</button>
            </form>
        </div>
        {{> footer }}
    </body>
</html>
